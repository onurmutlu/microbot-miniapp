{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/(.*\\.[a-z0-9]+$)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "http://microbot-api.siyahkare.com:8000/api",
    "VITE_WS_URL": "ws://microbot-api.siyahkare.com:8000/api/ws",
    "VITE_TELEGRAM_BOT_TOKEN": "AAHXfH1fOIuOl6P_sJk5bbaE9mG8oKayNaY"
  }
} 