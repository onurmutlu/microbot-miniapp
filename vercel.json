    "VITE_API_URL": "http://microbot-api.siyahkare.com:8000/api",
    "VITE_WS_URL": "ws://microbot-api.siyahkare.com:8000/api/ws",
    "VITE_TELEGRAM_BOT_TOKEN": "AAHXfH1fOIuOl6P_sJk5bbaE9mG8oKayNaY"
  }
} 